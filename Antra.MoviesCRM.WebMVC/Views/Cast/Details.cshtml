@{
}

@model Antra.MoviesCRM.Core.Models.CastModel

<div class="container">
    <div class="row">
        <h1>@Model.Name</h1>
        <div>Gender: @Model.Gender</div>
        <a href="@Model.TmdbUrl">Tmdb</a>
    </div>
</div>

<div class="container">
    Movies Present:
    <table>
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Character Name</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var value in Model.Movies)
                {
                    <tr>
                        <td></td>
                        <td>@value.Character</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>