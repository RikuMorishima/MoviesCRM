@{
}
@model PaginationModel<IEnumerable<MovieModel>>

<h1>Genres</h1>                

<div class="container">
    <div class="row">
    @{
        if (Model!=null && Model.Value!=null)
        foreach(var m in Model.Value)
        {
            <div class="col col-3">
                @Html.Partial("_MovieCard",m)
            </div>
            }
        }
    </div>
</div>

<nav aria-label="Movie navigation">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
        @{
            int index = Model.PageIndex;
            for (int i =index - 2; i < Model.PageCount && i < index+2;i++)
            {
                if (i > 0 && i != index)
                {
                    <li class="page-item"><a class="page-link" href="#">@i</a></li>
                }
                if (i==index)
                {
                    <li class="page-item active">
                        <a class="page-link" href="#">@i <span class="sr-only">(current)</span></a>
                    </li>
                }
            }

        }
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
</nav>